theme = Adventure Time

# -- window decoration --
window-decoration = auto

# Use the left Option key as Alt/Meta (you can use: true | left | right)
macos-option-as-alt = left

# Remap the Option+Arrows to CSI with Alt modifier (1;3X)
keybind = alt+arrow_left=csi:1;3D
keybind = alt+arrow_right=csi:1;3C

# -- opacity --
unfocused-split-opacity = 0.38
unfocused-split-fill = 000000
background-opacity-cells = true

# — Cursor feel —
cursor-style = bar
cursor-opacity = 0.85
cursor-click-to-move = true
cursor-color = #ffaa00

# — Shell integration & safety —
shell-integration = zsh

custom-shader = shaders/cursor_blaze.glsl
background-image = images/seascape-ai-image.png
background-image-opacity = 0.255555
background-image-position = center
background-image-fit = cover
background-opacity = 0.90
background-blur = true
mouse-hide-while-typing = true
initial-command = /opt/homebrew/bin/tmux new -A -s Default
macos-titlebar-style = transparent
keybind = shift+enter=text:\n
